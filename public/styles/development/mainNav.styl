_mainNavSize = 2.5rem
_mainNavFix = 177px
_mainNavColor1 = _colorG - 34%
_mainNavColor2 = _colorT2
_mainNavColor3 = _color2
_logoNavSizeWidth = 4em

.logo-nav
  grid-row span 2
  display block
  background-color _color2 //_mainNavColor1
  box-shadow _shadow2
  &:focus
  &:hover
  &:active
    background-color _color2
  &::after
    content ''
    display block
    width 100%
    height 100%
    //background-color _color2
    background-image url(../medias/images/logo/195v.svg)
    background-repeat no-repeat
    background-position 50% 50%
    background-size auto 70%
    box-shadow _shadow3

.main-nav
  position relative
  display flex
  z-index 2000 // @note Permet de passer au-dessus de certains éléments définis par des sources externes, comme les Maps Leaflet.
  //height _mainNavSize
  //font-size 1em
  box-shadow _shadow2
  user-select none
  & ul
    width 100%
    margin 0
    padding 0
    background-color _mainNavColor1
  & li
    list-style none
    & > *
      display block
      padding 0 1em
      line-height unit(_mainNavSize, '')
      box-shadow _shadow3
  & a
    color _mainNavColor2
    text-decoration none
    &:focus
    &:hover
    &:active
      color #fff
      background-color _mainNavColor3
    &:focus svg
    &:hover svg
    &:active svg
      animation animJump .5s ease-in-out

@media (max-width _sizeNav)


  .logo-nav
    position absolute // @todo Solution à revoir.
    z-index 10
    width _logoNavSizeWidth
    height 2.5em

  .main-nav
    & ul
      position absolute
      z-index 800
      transform translateX(-100vw)
      //left -100vw // @bugfix @affected Safari @note Pas de possibilité d'effet de droite à gauche : dépassement des conteneurs, même avec body overflow hidden-x
      //top -100vh
    & li
      background-color _mainNavColor1
      transform rotate(90deg)
      transition transform .4s ease-in-out
    &.active li
      //left 0
      //margin-left 100vw
      transform translateX(100vw) rotate(0deg)

  _x = 12
  for _i in 1.._x
    _abstr = _i / _x
    .nav li:nth-child({_i})
      transition-delay '%ss' % _abstr

  .breadcrumb
    padding-left _logoNavSizeWidth !important // @todo Solution à revoir.

@media (min-width _sizeNav)

  .nav
    display grid
    grid-template-columns 5em 1fr

  .main-nav ul
    display flex
    & .active
      position relative
      background-color _mainNavColor3
      &::after
        content ''
        position absolute
        top 2.5em
        left calc(50% - 1em)
        width 2em
        height 1em
        background-color _mainNavColor3
        clip-path polygon(0 0, 100% 0, 50% 100%)

  @keyframes animJump
    30%
      transform translateY(-.3em)

  .nav ul > :last-child
      margin-left auto

// Hamburger:

@media (max-width _sizeNav)

  .cmd-nav
    position absolute
    //top 0
    right 0
    z-index 2001
    width _mainNavSize
    height _mainNavSize
    padding (_mainNavSize / 10)
    cursor pointer
    background-color transparent
    //fill #000
    border none
    outline none
    & svg
      width 100%
      height 100%
    & *
      transform-origin center
      transition transform .3s ease
      fill _mainNavColor3
    &:focus
    &:hover
      background-color _mainNavColor3
    &:focus svg *
    &:hover svg *
      fill #fff
      //animation: .6s ease-in-out colorChange forwards
    &.active svg :nth-child(1)
      transform translate(- _mainNavFix, _mainNavFix) rotate(45deg)
    &.active svg :nth-child(2)
      transform rotate(-45deg)
    &.active svg :nth-child(3)
      transform translate(- _mainNavFix, - _mainNavFix) rotate(-45deg)

  /*
  @keyframes colorChange
    to
      fill #fff
  */

@media (min-width _sizeNav)

  .cmd-nav
    display none
