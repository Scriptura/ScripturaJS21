_cardsColor1 = _colorT2
_cardsColor2 = _colorG + 7%
_cardsR1 = .5rem
_cardsR2 = .2rem

.card
  & svg:hover
  &:focus-within svg
    fill orange
    background-color _cardsColor2 - 30%
  & h2
  & p
    margin 0
    padding 2rem // @note Les em faussent les r√©sultats entre titres et paragraphes
    background-color _cardsColor2
    box-shadow _shadow8
  & h2
    margin-bottom 0
    text-align center
    border-radius _cardsR1 _cardsR1 _cardsR2 _cardsR2
  & p
    margin-top 0
    border-radius _cardsR2 _cardsR2 _cardsR1 _cardsR1
  & a
    & svg
      display block
      width 'calc(100% - %s)' % (_cardsR2 * 2)
      height 8em
      margin 0 auto
      padding 1em 0
      color _cardsColor1
      background-color _cardsColor2 // - 15%
      box-shadow _shadow8

