extends layout

block main
  main
    h1.main-heading!= data._name
    .grid2.gap.media-s-grid1
      ul
        li Id : #{data._id}
        li Username : #{data._username}
        li Password : #{data._password}
        if data._email
          li Email : #{data._email}
        li Inscrit depuis le : #{data._creation}
        if data._revision
          li Dernière revision du profil le : #{data._revision}
        if data._last_login
          li Dernière connexion le : #{data._last_login}
      .center
        svg.size25.decorative-svg(role='img' focusable='false' style='height:12em')
          use(xlink:href='/medias/sprites/silos/79v-d2.svg#1')
    hr
    ul.list-stripe-links.grid3
      li
        a(href='/user/admin') User admin
      li
        a(href='/user/test') User test (request failed)
      li
        a(href='/user/123') User xyz (incorrect path)
