extends layout

block main
  main#main(role='main')
    h1.main-heading!= data._name
    ul
      if data._street && data._postal_code && data._locality
        li Adresse : #{data._street}, #{data._postal_code}, #{data._locality}
      else if data._locality
        li Ville : #{data._locality}
      if data._location
        li Latitude : #{data._location.y}
      if data._location
        li Longitude : #{data._location.x}
      if data._elevation
        li Altitude : #{data._elevation}
    if data._location
      .gap-bottom
        #map.map(style='height:50vh' data-name='Basilique Notre-Dame-de-la-Garde' data-coords='[' + data._location.y + ',' + data._location.x + ']', data-zoom='15', data-color='#ff654f', data-tileserver='https://api.mapbox.com/styles/v1/mapbox/streets-v11/tiles/{z}/{x}/{y}?access_token=pk.eyJ1Ijoib2xpdmllcmMiLCJhIjoiY2s5dnNnZWoyMDIzNDNzb2Y1dmQ4MGNtMCJ9.m4U-wYcS4EPcKe9nVXIbUA', data-attribution='<a href="//www.openstreetmap.org/">OSM</a> | <a href="//www.mapbox.com/">Mapbox</a>')
